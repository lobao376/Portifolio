n1 = float(input('Primeira nota?'))
n2 = float(input('Segunda nota?'))
media = (n1 + n2) /2
print('Com as notas {} e {}, sua média foi {}'.format(n1, n2, media))
if 7 > media >= 5:
    print('O aluno esta em \33[1;33mRECUPERAÇÃO!\33[m📚')
elif media < 5:
    print('O aluno está \33[1;31mREPROVADO\33[m ❌')
elif media >= 7:
    print('O aluno está \33[1;32mAPROVADO!\33[m✅')
