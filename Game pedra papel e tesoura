from random import randint
from time import sleep
itens = ('Pedra', 'Papel', 'Tesoura')
computador = randint(0,2)
print('{:=^40}'.format('🎉🎮VAMOS BRINCAR🎉🎮'))
nome = str(input('Qual seu nome?'))
print('''[ 0 ] 🪨PEDRA\n[ 1 ] 📄PAPEL\n[ 2 ] ✂️TESOURA''')
escolha = int(input('Qual sua jogada👀: '))
print('{:=^10}'.format('💪 JO 💪'))
sleep(1.5)
print('{:=^10}'.format('💪 KEM 💪'))
sleep(1)
print('{:=^10}'.format('💪 POO!!! 💪'))
sleep(1)
print('-='* 15)
print('o computador💻 escolheu {}'.format(itens[computador]))
print('{} escolheu {}'.format(nome, escolha))
print('-='* 15)
if computador == 0:
    if escolha == 0:
        print('\33[1;33mEMPATOU\33[m')
        print('{:-^40}'.format('\33[1;33mEMPATOU\33[m'))
        print('\33[1;33mVamos de novo?\33[m')
    elif escolha == 1:
        print('\33[1;32m{} VENCEU\33[m'.format(nome))
    elif escolha == 2:
        print('\33[1;31mCOMPUTADOR VENCEU\33[m')
    else:
        print('\33[1;31mXXX - JOGADA INVÁLIDA - XXX\33[m')
elif computador == 1:
    if escolha == 0:
        print('\33[1;31mCOMPUTADOR VENCEU\33[m')
    elif escolha == 1:
        print('\33[1;33mEMPATOU\33[m')
        print('\33[1;33mVamos de novo?\33[m')
    elif escolha == 2:
        print('\33[1;32m{} VENCEU\33[m'.format(nome))
    else:
        print('\33[1;31mXXX - JOGADA INVÁLIDA - XXX\33[m')
elif computador == 2:
    if escolha == 0:
        print('\33[1;32m{} VENCEU\33[m'.format(nome))
    elif escolha == 1:
        print('\33[1;31mCOMPUTADOR VENCEU\33[m')
    elif escolha == 2:
        print('\33[1;33mEMPATOU\33[m')
        print('\33[1;33mVamos de novo?\33[m')
