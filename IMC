p = float(input('Digite seu peso: (kg) '))
al = float(input('Digite sua altura: (m) '))
imc = p / (al ** 2)
print ('o IMC dessa pessoa é {:.1f}'.format(imc))
if imc < 18.5:
    print('Esta ABAIXO DO PESO!!')
elif 18.5 <= imc < 25:
    print('\33[1;30;42mEsta no PESO IDEAL\33[m')
elif 25 <= imc < 30:
    print('Esta com SOBREPESO')
elif 30 <= imc < 40:
    print('Esta com OBESIDADE!')
else:
    print('\33[1;30;41mEsta com OBESIDADE MÓRBIDA, CUIDADO!!!\33[m')
