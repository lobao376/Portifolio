print ('Conversor de metragem simples')
n = float(input ('Dist√¢ncia em Metros: '))
km = n/1000
hm = n/100
dam = n/10
dm = n*10
cm = n*100
mm = n*1000
print ('A medida de {}m, corresponde a:'.format(n))
print ('{:.2f} km'.format(km))
print ('{:.1f} hm'.format(hm))
print ('{:.0f} dam'.format(dam))
print ('{:.0f} dm'.format(dm))
print ('{:.0f} cm'.format(cm))
print ('{:.0f} mm'.format(mm))
